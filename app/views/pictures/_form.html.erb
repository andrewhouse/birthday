<% if @picture.errors.any? %>
<div id="error_explanation">
  <h4><%= pluralize(@picture.errors.count, "error") %> prevented the message from being  uploaded.</h4>

  <ul>
    <% @picture.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    <hr>
  </ul>
</div>
<% end %>

<%= form_for @picture, :url => pictures_path, :html => { :multipart => true, :class => 'form-vertical' } do |f| %>
  <div class="control-group">
    <%= f.label :username, "Your Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <span class="help-block">
    <%= f.label :description, "Happy Birthday Message", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_field', :rows => "8" %>
    </span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, "Picture to Upload" %><br>
      <div class="controls">
      <%= f.file_field :image %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Upload Happy Birthday Picture", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pictures_path, :class => 'btn' %>
  </div>
<% end %>
