
<% @pictures.each do |picture| %>
<div id="from">
  <h3>From: <%= picture.username %></h3> 
</div>
<div class="containing-border">
  <button class="btn btn-primary btn-large">Show Message!</button>
  <div class="description">
    <h3><%= picture.description %></h3>

    <% if picture.image.blank? == false %>
    <%= image_tag picture.image.url(:large) %>
    <% end %>
  </div>

</div>

<hr>

<% end %>

<%= link_to t('.new', :default => t("Upload Happy Birthday Picture")), 
new_picture_path,
:class => 'btn btn-primary' %>


